# MaynDrive Automation System Environment Configuration
# Copy this file to .env and update values as needed

# Core Application Settings
NODE_ENV=development
PORT=3000
FRONTEND_URL=http://localhost:5173
WEBRTC_URL=ws://localhost:8081

# State Detection Configuration
STATE_DETECTOR_CONFIDENCE_MIN=70
STATE_DETECTOR_CONFIDENCE_AMBIGUOUS=50
STATE_DETECTOR_MAX_CANDIDATES=5
STATE_DETECTOR_SELECTOR_WEIGHTS={"resource-id":3,"content-desc":2,"text":1,"accessibility":1.5,"xpath":0.5,"coords":0.2}

# UI Graph Storage
UI_GRAPH_STORAGE_PATH=var
UI_GRAPH_MAX_VERSIONS=10
UI_GRAPH_AUTO_CLEANUP=true
UI_GRAPH_CHECKSUM_ALGORITHM=sha256

# Flow Execution
FLOW_DEFAULT_TIMEOUT_MS=30000
FLOW_MAX_RETRY_ATTEMPTS=3
FLOW_RETRY_DELAY_MS=1000
FLOW_RECOVERY_ENABLED=true

# Capture Workflow
CAPTURE_SCREENSHOT_FORMAT=png
CAPTURE_SCREENSHOT_QUALITY=90
CAPTURE_MAX_SELECTOR_CANDIDATES=50
CAPTURE_MIN_SELECTOR_CONFIDENCE=0.3

# Emulator Integration
EMULATOR_SERIAL=emulator-5554
EMULATOR_BOOT_TIMEOUT_MS=120000
EMULATOR_WEBRTC_PORT=8081

# Logging and Telemetry
LOG_LEVEL=info
TELEMETRY_ENABLED=true
TELEMETRY_RETENTION_DAYS=30

# Performance Tuning
STATE_DETECTOR_CACHE_SIZE=100
UI_GRAPH_CACHE_TTL_MS=60000
MAX_CONCURRENT_FLOWS=3
MAX_CONCURRENT_CAPTURES=2

# Security
CORS_ORIGINS=http://localhost:5173